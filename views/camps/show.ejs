<% include ../partial/top %>
<h1>this the show templeta </h1>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active"> may</li>
                <li class="list-group-item "> mona</li>
                <li class="list-group-item "> sam</li>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="thumbnail">
                <img class="img-responsive"src="<%= campground.img%>">
                <div class="caption-full caption">
                    <h4 class="pull-right">
                     $ <%= campground.price%>/night
                    </h4>
                    <h4>
                        <a><%= campground.name %></a>
                    </h4>
                    <p>
                            <%= campground.des %>
                    </p>
                    <p>
                        <strong>done by
                        <%= campground.author.username %></strong>
                    </p>
                    <% if(nwuser && campground.author.id.equals(nwuser._id)){%>
                    <a href="/campg/<%= campground._id%>/edit" class="btn btn-warning">Edit</a>
                    <form class="delForm" action="/campg/<%= campground._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">
                            DELETE
                        </button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class=well>
                <div class="text-right">
                    <a href="/campg/<%=campground._id%>/comment/new" class="btn-lg btn btn-success btn-default">add comment</a>
                </div>
                <hr>
                <%campground.comments.forEach(function(comment){%>
                <div class="row">
                    <div class="col-lg-12">
                        <h4><%= comment.author.username %> </h4>
                        <span class="pull-right">10 Days Ago</span>
                        <p><%= comment.text %></p>
                        <% if(nwuser && comment.author.id.equals(nwuser._id)){%>
                        <a class="btn btn-warning" href="/campg/<%=campground._id%>/comment/<%=comment._id%>/edit">Edit</a>
                        <form class="delForm"  action="/campg/<%=campground._id%>/comment/<%=comment._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">DELETE</button>
                        </form>
                        <% } %>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>






<% include ../partial/bottom %>